.row
  .col-md-6
    %h3
      All scores
      = "(#{@scores_count})"

  %table.table.table-striped
    %thead
      %tr
        %th Player name
        %th Score
        %th IP
        %th Device
        %th Device model
        %th Date created

    %tbody
      - @scores.each do |score|
        %tr
          %td= score.player_name
          %td= score.amount
          %td= score.ip
          %td= score.device_model
          %td= score.device_type
          %td= score.created_at.to_date

.row
  .col-md-6
    =paginate @scores
